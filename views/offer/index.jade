extends ../layout

block content
  .container
    .row
      .col-md-3
      .col-md-6
        form.form-inline(role='form' action='/offer/offerIt' method='post')
          .row
            .col-xs-2
            .col-xs-8
              .input-group.input-group-lg
                h1= title
                div &nbsp;
                label Year
                select.form-control.input-lg(id="year", name="year" value="2016")
                    -for(var i = 1992;i<2016;i++){
                    option(value="#{i}") #{i}
                    -}
                div &nbsp;
                label Model 
                select.form-control.input-lg(name="model" id="model" value="STI")
                  option(value="STI") STI
                  option(value="WRX") WRX
                div &nbsp;
                label Style 
                select.form-control.input-lg(name="style" id="style" value="Wing")
                  option(value="big_wing") Wing W/ Backup Cam
                  option(value="no_wing") No Wing
                  option(value="small_wing") Small Wing
                  option(value="lip") Lip w/ Backup Cam
                div &nbsp;
                button.btn.btn-lg.btn-info(type='submit') Post
            .col-xs-2
      .col-md-3