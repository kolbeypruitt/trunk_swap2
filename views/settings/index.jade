extends ../layout

block content
  .container
    .row
      .col-md-3
      .col-md-6
        .jumbotron
          .page-header
            .row
              .col-md-3
                h2= title
              .col-md-6

              .col-md-3
                a(href='/settings/edit') edit
                div
                a(href='/settings/close') close
          img(class='profilePic' src=profilePic)
          p First Name:
            span   #{firstName}
          div
          p Last Name:
            span   #{lastName}
          div
          p Email:
            span   #{email}
          p Phone:
            span   #{phone}
      .col-md-6