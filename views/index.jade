extends layout

block content
  if displayName
    .page-header
      nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Trunk Man
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#')
                | Link 
                span.sr-only (current)
            li
              a(href='#') Link
          //- form.navbar-form.navbar-left(role='search')
          //-   .form-group
          //-     input.form-control(type='text', placeholder='Search')
          //-   button.btn.btn-default(type='submit') Submit
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Trading Block
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | #{displayName}
                span.caret
              ul.dropdown-menu
                li
                  a(href='/logout') Log Out
                li.divider(role='separator')
                li
                  a(href='#') User Settings
                li
                  a(href='#') Go Somewhere Cool
        // /.navbar-collapse
      // /.container-fluid
  .container
    .row
      .col-md-3
      .col-md-6
        if !displayName
          h1 Welcome to #{title}
          p
            a(href='/auth/google') login with google
      .col-md-3
    if displayName
      .row
        .col-md-6
          .jumbotron
            h1
            p
              a.btn.btn-info.btn-lg(href='/offer', role='button') Offer Trade
        .col-md-6
          .jumbotron
            h1
            p
              a.btn.btn-info.btn-lg(href='/search', role='button') Search Offers

    